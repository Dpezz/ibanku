{% extends 'IBKDemoBundle:Layout:page.html.twig' %}

{% block title %}Restablecer{% endblock %}


{% block content %}

<div class="container">

	{% if app.user %}
		<br>
		<br>
	{% endif %}
	
	<div class="page-header">
		<h3>Restablecer contraseña</h3>
	</div>

	<form>

		<div class="form-group">
            <input type="text" class="form-control" id="rut" name="_rut" placeholder="Rut" required />
	    </div>

	    <hr>

		<div class="form-group">
            <input type="email" class="form-control" name="_email" placeholder="Correo electrónico.." required />
	    </div>

	    <hr>

	    <div class="form-group">
	    	<label class="text-info">Contraseña</label>
            <input type="password" class="form-control" name="_passwordNew" placeholder="Nueva Contraseña" required />
			<p id="nivelpassRst" class='text-danger'></p>
	    </div>

	    <div class="form-group">
            <input type="password" class="form-control" name="_confirmPasswordNew" placeholder="Repetir Nueva Contraseña" required />
			<p id="equalpassRst" class='text-danger'></p>
	    </div>
		
		<div class="modal-footer">
			<a class="pull-left" href="{{path('_profile_secured_password')}}"><i class="fa fa-long-arrow-left"></i>&nbsp;Volver</a>
	        <button type="submit" class="btn btn-primary">
	        	<i class="fa fa-floppy-o"></i>&nbsp;Guardar
	        </button>
	    </div>

	</form>
</div>

{% endblock %}
